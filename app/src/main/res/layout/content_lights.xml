<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lights" tools:context="com.example.momurder.ihomeapp.Lights">

    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:id="@+id/imageLights2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src ="@drawable/lights" />

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/buttonOn"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/imageLights2"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttons"/>

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="Dim"
        android:id="@+id/buttonDim"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttons"
        android:radius="10dip"/>

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/buttonOff"
        android:layout_below="@+id/buttonDim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttons"
        />

</RelativeLayout>
