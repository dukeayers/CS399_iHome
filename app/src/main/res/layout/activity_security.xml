<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.7"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:id="@+id/imageSec2"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/security" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Doors"
                        android:gravity="center"
                        android:id="@+id/doors"
                        android:textSize="45sp" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="LOCK"
                            android:id="@+id/btnLock"
                            android:background="#FF0000"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Unlock"
                            android:id="@+id/btnUnlock"
                            android:textColor="#FFFFFF"
                            android:background="#26A65B"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"

                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Cameras"
                        android:gravity="center"
                        android:id="@+id/camera"
                        android:textSize="45sp" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="OFF"
                            android:id="@+id/cameraOff"
                            android:background="#FF0000"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="ON"
                            android:id="@+id/cameraOn"
                            android:textColor="#FFFFFF"
                            android:background="#26A65B"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Alarms"
                        android:gravity="center"
                        android:id="@+id/alarm"
                        android:textSize="45sp" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="ARM"
                            android:id="@+id/alarmEnable"
                            android:background="#FF0000"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="DISARM"
                            android:id="@+id/alarmDisable"
                            android:textColor="#FFFFFF"
                            android:background="#26A65B"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

