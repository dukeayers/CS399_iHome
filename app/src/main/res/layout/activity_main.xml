<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="83dp"
        android:layout_height="43dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="398dp"
        android:layout_height="691dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="511dp"
            android:layout_height="411dp"
            android:gravity="left|center"
            android:includeFontPadding="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/intro"
            android:id="@+id/intro"
            android:textColor="#ffffff"
            android:background="#22313F"
            android:textSize="36sp" />

        <Button
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:background="#26A65B"
            android:id="@+id/rLogin"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/rRegister"
            android:layout_alignRight="@+id/rRegister"
            android:layout_alignEnd="@+id/rRegister"
            android:layout_marginBottom="40dp" />

        <Button
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="#FFFFFF"
            android:background="#26A65B"
            android:id="@+id/rRegister"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="99dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
