<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context="com.example.momurder.ihomeapp.Home"
    android:id="@+id/rel">

    <ImageButton

        android:id="@+id/imageLights"
        android:src="@drawable/lights"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignTop="@+id/imageTemp"
        android:layout_toLeftOf="@+id/btnSettings"
        android:layout_toStartOf="@+id/btnSettings" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageTemp"
        android:src="@drawable/temper"
        android:layout_above="@+id/imageSec"
        android:layout_toRightOf="@+id/btnSettings"
        android:layout_toEndOf="@+id/btnSettings" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imagePhone"
        android:src="@drawable/phon"
        android:layout_alignTop="@+id/imageTv"
        android:layout_alignRight="@+id/imageTemp"
        android:layout_alignEnd="@+id/imageTemp" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageTv"
        android:src="@drawable/tel"
        android:layout_above="@+id/btnSettings"
        android:layout_toLeftOf="@+id/btnSettings"
        android:layout_toStartOf="@+id/btnSettings"
        android:layout_marginBottom="77dp" />

    <ImageButton
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/imagePlus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add" />
    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Settings"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:background="#26A65B"
        android:id="@+id/btnSettings"
        android:layout_weight="2.20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageSec"
        android:src="@drawable/security"
        android:layout_above="@+id/imageTv"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
