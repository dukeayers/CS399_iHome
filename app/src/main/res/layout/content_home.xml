<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "horizontal"
    android:background="#F2F1EF"
    >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#22313F"
                    >
                    <ImageButton
                        android:id="@+id/imgLights"
                        android:src="@drawable/lock"
                        android:gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:background="#22313F"
                        android:layout_height="50dp"/>
                    <Button
                        android:id="@+id/btnLights"
                        android:background="#22313F"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Lights"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="#22313F"
                    >
                    <ImageButton
                        android:id="@+id/imgSecurity"
                        android:src="@drawable/lock"
                        android:gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:background="#22313F"
                        android:layout_height="50dp"/>
                    <Button
                        android:id="@+id/btnSecurity"
                        android:background="#22313F"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Security"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:id="@+id/imageTv"
                    android:src="@drawable/tel" />
                <ImageButton
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:id="@+id/imageSec"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/security" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:id="@+id/imagePhone"
                    android:src="@drawable/phon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:text="Settings"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="#FFFFFF"
                    android:background="#26A65B"
                    android:id="@+id/btnSettings"
                    android:layout_weight="2.20"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="65dp" />

            </LinearLayout>





        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.05"
        >
    </RelativeLayout>


</LinearLayout>
