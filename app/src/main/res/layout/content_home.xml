<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context="com.example.momurder.ihomeapp.Home"
    android:id="@+id/rel">

    <ImageButton

        android:id="@+id/imageLights"
        android:layout_marginTop="124dp"
        android:src="@drawable/lights"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageTemp"
        android:src="@drawable/temper"
        android:layout_alignTop="@+id/imageLights"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imagePhone"
        android:src="@drawable/phon"
        android:layout_alignTop="@+id/imageTv"
        android:layout_alignRight="@+id/imageTemp"
        android:layout_alignEnd="@+id/imageTemp" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:id="@+id/imageTv"
        android:src="@drawable/tel"
        android:layout_below="@+id/imageLights"
        android:layout_alignLeft="@+id/imageLights"
        android:layout_alignStart="@+id/imageLights"
        android:layout_marginTop="112dp" />

    <ImageButton
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:id="@+id/imagePlus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Settings"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:background="#26A65B"
        android:id="@+id/btnSettings"
        android:layout_weight="2.20"
        android:layout_below="@+id/imagePhone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />

</RelativeLayout>
